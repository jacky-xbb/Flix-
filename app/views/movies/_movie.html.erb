<div id="<%= dom_id movie %>" class="grid grid-cols-1 justify-items-center px-5 sm:grid-cols-2">
  <p class="my-5 w-32">
    <%= image_tag movie.image if movie.image.attached? %>
  </p>

  <div class="">
    <p class="text-primary-light my-5 font-bold text-blue-500 text-xl sm:text-2xl">
      <%= link_to movie.title, movie_path(movie) %>
    </p>

    <p class="my-5">
      <%= number_to_currency(movie.total_gross, precision: 0) %>
    </p>

    <p class="my-5">
      <%= movie.description %>
    </p>
  </div>
</div>
