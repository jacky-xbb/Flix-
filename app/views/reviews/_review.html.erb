<div id="<%= dom_id review %>" class="flex flex-col py-5" >

  <h1 class="font-bold text-xl">Review for <%= link_to review.movie.title, review.movie, class: "text-indigo-600" %></h1>

  <p class="my-2 text-xl">
    <%= pluralize(review.stars, 'star') %>
  </p>

  <p class="my-2 text-xl">
    <%= link_to review.user.name, review.user, class: "text-indigo-600" %>
    <span class="text-gray-500"> <%= time_ago_in_words(review.created_at) %> ago </span>
  </p>

  <p class="my-2 text-xl">
    <%= review.comment %>
  </p>
</div>
